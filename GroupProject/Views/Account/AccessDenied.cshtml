@{
    ViewData["Title"] = "Access Denied";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg text-center">
                <div class="card-body py-5">
                    <i class="fas fa-lock" style="font-size: 5rem; color: var(--primary-red); margin-bottom: 2rem;"></i>
                    <h2 class="mb-4" style="color: var(--primary-red);">
                        <i class="fas fa-exclamation-triangle me-2"></i>Access Denied
                    </h2>
                    <p class="lead text-light mb-4">
                        You don't have permission to access this resource.
                    </p>
                    <p class="text-muted mb-4">
                        This page requires specific user roles. Please contact an administrator if you believe you should have access.
                    </p>
                    
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="fas fa-home me-2"></i>Go to Home
                        </a>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Sign In
                            </a>
                        }
                        else
                        {
                            <a href="javascript:history.back()" class="btn btn-outline-light btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Go Back
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>