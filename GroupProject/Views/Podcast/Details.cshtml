@model GroupProject.Code.Models.Podcast
@{
    ViewData["Title"] = "Podcast Details";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="text-white mb-0">
                        <i class="fas fa-podcast me-2"></i>@Model.Title
                    </h2>
                    <a asp-action="Index" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h4 class="text-light mb-3">
                                <i class="fas fa-info-circle me-2" style="color: var(--primary-red);"></i>
                                Podcast Information
                            </h4>
                            
                            <dl class="row">
                                <dt class="col-sm-4 text-light">
                                    <i class="fas fa-tag me-2"></i>Podcast ID:
                                </dt>
                                <dd class="col-sm-8 text-muted">
                                    @Model.PodcastID
                                </dd>

                                <dt class="col-sm-4 text-light">
                                    <i class="fas fa-heading me-2"></i>Title:
                                </dt>
                                <dd class="col-sm-8 text-muted">
                                    @Model.Title
                                </dd>

                                <dt class="col-sm-4 text-light">
                                    <i class="fas fa-user me-2"></i>Creator:
                                </dt>
                                <dd class="col-sm-8 text-muted">
                                    @Model.CreatorID
                                </dd>

                                <dt class="col-sm-4 text-light">
                                    <i class="fas fa-calendar-plus me-2"></i>Created Date:
                                </dt>
                                <dd class="col-sm-8 text-muted">
                                    @Model.CreatedDate.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                                </dd>

                                <dt class="col-sm-4 text-light">
                                    <i class="fas fa-align-left me-2"></i>Description:
                                </dt>
                                <dd class="col-sm-8 text-muted">
                                    @Model.Description
                                </dd>
                            </dl>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card" style="background-color: rgba(220, 53, 69, 0.1); border-color: var(--primary-red);">
                                <div class="card-body">
                                    <h5 class="card-title" style="color: var(--primary-red);">
                                        <i class="fas fa-cog me-2"></i>Actions
                                    </h5>
                                    <div class="d-grid gap-2">
                                        <a asp-action="Edit" asp-route-id="@Model.PodcastID" class="btn btn-primary">
                                            <i class="fas fa-edit me-2"></i>Edit Podcast
                                        </a>
                                        <a asp-controller="Episode" asp-action="Index" class="btn btn-outline-primary">
                                            <i class="fas fa-list me-2"></i>Manage Episodes
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteModal">
                                            <i class="fas fa-trash me-2"></i>Delete Podcast
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background-color: var(--medium-gray); border: 2px solid var(--primary-red);">
            <div class="modal-header" style="border-bottom: 1px solid var(--primary-red);">
                <h5 class="modal-title text-light">
                    <i class="fas fa-exclamation-triangle me-2" style="color: var(--primary-red);"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-light">
                <p>Are you sure you want to delete the podcast <strong>"@Model.Title"</strong>?</p>
                <p class="text-danger">
                    <i class="fas fa-exclamation-circle me-1"></i>
                    This will also delete all episodes associated with this podcast!
                </p>
            </div>
            <div class="modal-footer" style="border-top: 1px solid var(--primary-red);">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.PodcastID" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Delete Podcast
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>