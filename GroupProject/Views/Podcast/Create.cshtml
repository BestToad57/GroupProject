@model GroupProject.Code.Models.Podcast
@{
    ViewData["Title"] = "Create Podcast";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h2 class="text-white mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Create New Podcast
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label text-light">
                                <i class="fas fa-heading me-1"></i>Podcast Title
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="Enter podcast title" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label text-light">
                                <i class="fas fa-align-left me-1"></i>Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="5" 
                                      placeholder="Describe your podcast..." required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Creator:</strong> @User.Identity?.Name
                            <br />
                            <small class="text-muted">This will be set as the podcast creator</small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Create Podcast
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Box -->
            <div class="card mt-4" style="background-color: rgba(220, 53, 69, 0.1); border-color: var(--primary-red);">
                <div class="card-body">
                    <h5 class="card-title" style="color: var(--primary-red);">
                        <i class="fas fa-lightbulb me-2"></i>Next Steps
                    </h5>
                    <ul class="mb-0">
                        <li>After creating your podcast, you can add episodes</li>
                        <li>Upload audio files for each episode</li>
                        <li>Manage your podcast from "My Podcasts"</li>
                        <li>Users can subscribe to your podcast</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}