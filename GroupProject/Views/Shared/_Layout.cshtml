<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PodcastHub</title>

    <!-- Bootstrap CSS from CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom Black & Red Theme -->
    <style>
        :root {
            --primary-red: #dc3545;
            --dark-red: #b02a37;
            --light-red: #f8d7da;
            --black: #000000;
            --dark-gray: #1a1a1a;
            --medium-gray: #2d2d2d;
            --light-gray: #f8f9fa;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--dark-gray);
            color: var(--light-gray);
        }

        /* Navigation */
        .navbar {
            background: linear-gradient(135deg, var(--black) 0%, var(--dark-gray) 100%) !important;
            border-bottom: 3px solid var(--primary-red);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
            color: var(--primary-red) !important;
        }

        .navbar-nav .nav-link {
            color: var(--light-gray) !important;
            transition: all 0.3s ease;
        }

        .navbar-nav .nav-link:hover {
            color: var(--primary-red) !important;
            background-color: rgba(220, 53, 69, 0.1);
            border-radius: 5px;
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, var(--black) 0%, var(--primary-red) 100%);
        }

        /* Cards */
        .card {
            background-color: var(--medium-gray);
            border: 1px solid var(--primary-red);
            color: var(--light-gray);
            transition: all 0.3s ease-in-out;
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.2);
        }

        .card:hover {
            transform: translateY(-8px);
            border-color: var(--primary-red);
            box-shadow: 0 8px 25px rgba(220, 53, 69, 0.4);
        }

        .card-header {
            background-color: var(--primary-red) !important;
            border-bottom: 1px solid var(--dark-red);
        }

        .card-footer {
            background-color: var(--dark-gray);
            border-top: 1px solid var(--primary-red);
        }

        /* Buttons */
        .btn-primary {
            background-color: var(--primary-red);
            border-color: var(--primary-red);
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: var(--dark-red);
            border-color: var(--dark-red);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.4);
        }

        .btn-outline-primary {
            color: var(--primary-red);
            border-color: var(--primary-red);
        }

        .btn-outline-primary:hover {
            background-color: var(--primary-red);
            border-color: var(--primary-red);
        }

        .btn-outline-light {
            color: var(--light-gray);
            border-color: var(--light-gray);
        }

        .btn-outline-light:hover {
            background-color: var(--light-gray);
            border-color: var(--light-gray);
            color: var(--black);
        }

        .btn-success {
            background-color: var(--primary-red);
            border-color: var(--primary-red);
        }

        .btn-success:hover {
            background-color: var(--dark-red);
            border-color: var(--dark-red);
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
            color: var(--black);
        }

        /* Forms */
        .form-control {
            background-color: var(--medium-gray);
            border: 1px solid var(--primary-red);
            color: var(--light-gray);
            border-radius: 8px;
        }

        .form-control:focus {
            background-color: var(--medium-gray);
            border-color: var(--primary-red);
            color: var(--light-gray);
            box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
        }

        .form-select {
            background-color: var(--medium-gray);
            border: 1px solid var(--primary-red);
            color: var(--light-gray);
        }

        /* Alerts */
        .alert-success {
            background-color: rgba(220, 53, 69, 0.1);
            border-color: var(--primary-red);
            color: var(--light-gray);
        }

        .alert-danger {
            background-color: rgba(220, 53, 69, 0.2);
            border-color: var(--dark-red);
            color: var(--light-gray);
        }

        /* Footer */
        footer {
            background-color: var(--black) !important;
            border-top: 3px solid var(--primary-red);
        }

        /* Dropdown menus */
        .dropdown-menu {
            background-color: var(--medium-gray);
            border: 1px solid var(--primary-red);
        }

        .dropdown-item {
            color: var(--light-gray);
        }

        .dropdown-item:hover {
            background-color: var(--primary-red);
            color: white;
        }

        /* Links */
        a {
            color: var(--primary-red);
        }

        a:hover {
            color: var(--dark-red);
        }

        /* Text colors */
        .text-muted {
            color: #adb5bd !important;
        }

        .text-primary {
            color: var(--primary-red) !important;
        }

        /* Icons */
        .fas,
        .far {
            color: var(--primary-red);
        }

        /* Button enhancements */
        .btn {
            border-radius: 8px;
            transition: all 0.3s ease-in-out;
            font-weight: 500;
        }

        .btn:hover {
            transform: translateY(-2px);
        }

        /* Role badge */
        .role-badge {
            background-color: var(--primary-red);
            color: white;
            padding: 2px 8px;
            border-radius: 4px;
            font-size: 0.75rem;
            margin-left: 5px;
        }

        /* Modal positioning fix - prevent jumping */
        .modal {
            padding-right: 0 !important;
        }

        .modal.fade .modal-dialog {
            transition: transform 0.3s ease-out;
        }

        .modal-backdrop {
            background-color: rgba(0, 0, 0, 0.7);
        }

        /* Ensure modal is always on top and centered */
        .modal-dialog-centered {
            display: flex;
            align-items: center;
            min-height: calc(100% - 1rem);
        }

        /* Prevent scrollbar jump */
        body.modal-open {
            overflow: hidden;
            padding-right: 0 !important;
        }
    </style>
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-lg">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fas fa-podcast me-2"></i>PodcastHub
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <!-- Home - Available to everyone -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <!-- Admin Menu Items -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Users">
                                    <i class="fas fa-users me-1"></i>Manage Users
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Podcasts">
                                    <i class="fas fa-podcast me-1"></i>All Podcasts
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Episodes">
                                    <i class="fas fa-list me-1"></i>All Episodes
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="ModerateComments">
                                    <i class="fas fa-comments me-1"></i>Moderate Comments
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- Non-Admin Users Menu -->
                            <!-- Browse - Shows all podcasts with their episodes -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Episode" asp-action="Browse">
                                    <i class="fas fa-th-large me-1"></i>Browse
                                </a>
                            </li>

                            <!-- Search Episodes -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-search me-1"></i>Discover
                                </a>
                                <ul class="dropdown-menu">
                                    <li><h6 class="dropdown-header">Find Episodes</h6></li>
                                    <li><a class="dropdown-item" href="#" onclick="document.getElementById('searchForm').scrollIntoView({behavior: 'smooth'});">
                                        <i class="fas fa-search me-1"></i>Search Episodes</a></li>
                                    <li><a class="dropdown-item" asp-controller="Episode" asp-action="Popular">
                                        <i class="fas fa-fire me-1"></i>Popular Episodes</a></li>
                                </ul>
                            </li>

                            <!-- My Subscriptions -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Subscription" asp-action="Index">
                                    <i class="fas fa-bookmark me-1"></i>My Subscriptions
                                </a>
                            </li>

                            <!-- Podcaster specific menu -->
                            @if (User.IsInRole("Podcaster"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-microphone me-1"></i>My Content
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><h6 class="dropdown-header">Manage</h6></li>
                                        <li><a class="dropdown-item" asp-controller="Podcast" asp-action="Index">
                                            <i class="fas fa-podcast me-1"></i>My Podcasts</a></li>
                                        <li><a class="dropdown-item" asp-controller="Episode" asp-action="Index">
                                            <i class="fas fa-list me-1"></i>My Episodes</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><h6 class="dropdown-header">Create New</h6></li>
                                        <li><a class="dropdown-item" asp-controller="Podcast" asp-action="Create">
                                            <i class="fas fa-plus me-1"></i>New Podcast</a></li>
                                        <li><a class="dropdown-item" asp-controller="Episode" asp-action="Create">
                                            <i class="fas fa-plus-circle me-1"></i>New Episode</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    }
                </ul>

                <!-- Right side user menu -->
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle me-1"></i>
                                @User.Identity.Name
                                @if (User.IsInRole("Admin"))
                                {
                                    <span class="role-badge">ADMIN</span>
                                }
                                else if (User.IsInRole("Podcaster"))
                                {
                                    <span class="role-badge">PODCASTER</span>
                                }
                                else if (User.IsInRole("Listener"))
                                {
                                    <span class="role-badge">LISTENER</span>
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                    <i class="fas fa-user me-1"></i>Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="fas fa-sign-in-alt me-1"></i>Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-light ms-2 px-3" asp-controller="Account" asp-action="Register">
                                <i class="fas fa-user-plus me-1"></i>Register
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="fas fa-podcast me-2"></i>PodcastHub</h5>
                    <p class="text-muted mb-0">Your ultimate destination for podcast management and discovery.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="text-muted mb-0">&copy; 2025 PodcastHub. All rights reserved.</p>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <small class="text-muted">
                            Logged in as: @User.Identity.Name
                            @if (User.IsInRole("Admin"))
                            {
                                <span class="role-badge">ADMIN</span>
                            }
                            else if (User.IsInRole("Podcaster"))
                            {
                                <span class="role-badge">PODCASTER</span>
                            }
                            else if (User.IsInRole("Listener"))
                            {
                                <span class="role-badge">LISTENER</span>
                            }
                        </small>
                    }
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>