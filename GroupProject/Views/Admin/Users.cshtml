@model IEnumerable<GroupProject.Code.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container my-4">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="text-center mb-5">
        <h1 class="fw-bold mb-2" style="color: var(--primary-red);">
            <i class="fas fa-users me-2"></i>Manage Users
        </h1>
        <p class="lead text-muted">View and manage all registered users</p>
    </div>

    <!-- User Statistics -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card shadow-lg text-center">
                <div class="card-body">
                    <span class="badge bg-danger mb-2" style="font-size: 1.5rem;">
                        @Model.Count(u => u.Role == GroupProject.Code.Models.UserRole.Admin)
                    </span>
                    <p class="mb-0 text-light">Admins</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg text-center">
                <div class="card-body">
                    <span class="badge bg-primary mb-2" style="font-size: 1.5rem;">
                        @Model.Count(u => u.Role == GroupProject.Code.Models.UserRole.Podcaster)
                    </span>
                    <p class="mb-0 text-light">Podcasters</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg text-center">
                <div class="card-body">
                    <span class="badge bg-success mb-2" style="font-size: 1.5rem;">
                        @Model.Count(u => u.Role == GroupProject.Code.Models.UserRole.Listener)
                    </span>
                    <p class="mb-0 text-light">Listeners</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card shadow-lg">
        <div class="card-header">
            <h4 class="mb-0 text-white">
                <i class="fas fa-list me-2"></i>All Users
                <span class="badge bg-light text-dark ms-2">@Model.Count()</span>
            </h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-dark">
                    <thead>
                        <tr>
                            <th><i class="fas fa-envelope me-1"></i>Email</th>
                            <th><i class="fas fa-user-tag me-1"></i>Role</th>
                            <th><i class="fas fa-check-circle me-1"></i>Email Confirmed</th>
                            <th><i class="fas fa-calendar me-1"></i>Joined</th>
                            <th><i class="fas fa-cog me-1"></i>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.OrderBy(u => u.Role).ThenBy(u => u.Email))
                        {
                            var isCurrentUser = user.Email == User.Identity?.Name;
                            <tr class="@(isCurrentUser ? "table-active" : "")">
                                <td class="align-middle">
                                    @user.Email
                                    @if (isCurrentUser)
                                    {
                                        <span class="badge bg-info ms-2">You</span>
                                    }
                                </td>
                                <td class="align-middle">
                                    @if (user.Role == GroupProject.Code.Models.UserRole.Admin)
                                    {
                                        <span class="badge bg-danger">Admin</span>
                                    }
                                    else if (user.Role == GroupProject.Code.Models.UserRole.Podcaster)
                                    {
                                        <span class="badge bg-primary">Podcaster</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Listener</span>
                                    }
                                </td>
                                <td class="align-middle">
                                    @if (user.EmailConfirmed)
                                    {
                                        <i class="fas fa-check-circle text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times-circle text-danger"></i>
                                    }
                                </td>
                                <td class="align-middle">
                                    <small class="text-muted">Recently</small>
                                </td>
                                <td class="align-middle">
                                    @if (!isCurrentUser)
                                    {
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-warning" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#changeRoleModal-@user.Id"
                                                    title="Change Role">
                                                <i class="fas fa-user-tag"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteModal-@user.Id"
                                                    title="Delete User">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                            </tr>

                            <!-- Change Role Modal -->
                            <div class="modal fade" id="changeRoleModal-@user.Id" tabindex="-1">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content" style="background-color: var(--medium-gray); border: 2px solid var(--primary-red);">
                                        <div class="modal-header" style="border-bottom: 1px solid var(--primary-red);">
                                            <h5 class="modal-title text-light">
                                                <i class="fas fa-user-tag me-2" style="color: var(--primary-red);"></i>
                                                Change User Role
                                            </h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                        </div>
                                        <form asp-action="ChangeUserRole" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="userId" value="@user.Id" />
                                            <div class="modal-body text-light">
                                                <p>Change role for <strong>@user.Email</strong></p>
                                                <div class="mb-3">
                                                    <label class="form-label">Select New Role:</label>
                                                    <select name="newRole" class="form-select" required>
                                                        @{
                                                            var isAdmin = user.Role == GroupProject.Code.Models.UserRole.Admin;
                                                            var isPodcaster = user.Role == GroupProject.Code.Models.UserRole.Podcaster;
                                                            var isListener = user.Role == GroupProject.Code.Models.UserRole.Listener;
                                                        }
                                                        <option value="0" selected="@isAdmin">Admin</option>
                                                        <option value="1" selected="@isPodcaster">Podcaster</option>
                                                        <option value="2" selected="@isListener">Listener</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="modal-footer" style="border-top: 1px solid var(--primary-red);">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-warning">
                                                    <i class="fas fa-save me-1"></i>Change Role
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <!-- Delete Confirmation Modal -->
                            <div class="modal fade" id="deleteModal-@user.Id" tabindex="-1">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content" style="background-color: var(--medium-gray); border: 2px solid var(--primary-red);">
                                        <div class="modal-header" style="border-bottom: 1px solid var(--primary-red);">
                                            <h5 class="modal-title text-light">
                                                <i class="fas fa-exclamation-triangle me-2" style="color: var(--primary-red);"></i>
                                                Confirm Delete
                                            </h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body text-light">
                                            <p>Are you sure you want to delete user <strong>@user.Email</strong>?</p>
                                            <p class="text-danger">
                                                <i class="fas fa-exclamation-circle me-1"></i>
                                                This action cannot be undone!
                                            </p>
                                        </div>
                                        <div class="modal-footer" style="border-top: 1px solid var(--primary-red);">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <form asp-action="DeleteUser" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <button type="submit" class="btn btn-danger">
                                                    <i class="fas fa-trash me-1"></i>Delete User
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>