@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Welcome to PodcastHub</h1>
                <p class="lead">Your ultimate destination for podcast management, discovery, and engagement.</p>
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="mt-4">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg me-3">
                            <i class="fas fa-rocket me-2"></i>Get Started
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </a>
                    </div>
                }
                else
                {
                    <div class="mt-4">
                        <a asp-controller="Episode" asp-action="Browse" class="btn btn-light btn-lg me-3">
                            <i class="fas fa-th-large me-2"></i>Browse Podcasts
                        </a>
                        @if (User.IsInRole("Podcaster") || User.IsInRole("Admin"))
                        {
                            <a asp-controller="Podcast" asp-action="Create" class="btn btn-outline-light btn-lg">
                                <i class="fas fa-plus me-2"></i>Create Podcast
                            </a>
                        }
                    </div>
                }
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-microphone-alt" style="font-size: 8rem; opacity: 0.8; color: white;"></i>
            </div>
        </div>
    </div>
</div>

<div class="container">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">
                <i class="fas fa-user-check me-2"></i>Welcome back, @User.Identity.Name!
            </h4>
            <p class="mb-0">You're logged in as a <strong>@(User.IsInRole("Admin") ? "Administrator" : User.IsInRole("Podcaster") ? "Podcaster" : "Listener")</strong></p>
        </div>
    }

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100 shadow-lg">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-headphones" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">For Listeners</h5>
                    <p class="card-text">Discover amazing podcasts, subscribe to your favorites, and engage with the community through comments.</p>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Episode" asp-action="Browse" class="btn btn-primary">
                            <i class="fas fa-search me-1"></i>Browse Podcasts
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary">
                            <i class="fas fa-user-plus me-1"></i>Join as Listener
                        </a>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 shadow-lg">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-microphone" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">For Podcasters</h5>
                    <p class="card-text">Create and manage your podcasts, upload episodes, track performance, and grow your audience.</p>
                    @if (User.Identity.IsAuthenticated && (User.IsInRole("Podcaster") || User.IsInRole("Admin")))
                    {
                        <a asp-controller="Podcast" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Create Podcast
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary">
                            <i class="fas fa-microphone me-1"></i>Join as Podcaster
                        </a>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 shadow-lg">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fas fa-cog" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">For Administrators</h5>
                    <p class="card-text">Manage users, oversee content moderation, and access comprehensive system analytics.</p>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-warning">
                            <i class="fas fa-tachometer-alt me-1"></i>Admin Dashboard
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-warning">
                            <i class="fas fa-shield-alt me-1"></i>Join as Admin
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-lg">
                    <div class="card-header">
                        <h3 class="mb-0 text-white">
                            <i class="fas fa-bolt me-2"></i>Quick Actions
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <a asp-controller="Episode" asp-action="Browse" class="btn btn-outline-primary w-100 py-3">
                                    <i class="fas fa-th-large mb-2 d-block" style="font-size: 1.5rem;"></i>
                                    Browse All
                                </a>
                            </div>
                            <div class="col-md-3">
                                <a asp-controller="Subscription" asp-action="Index" class="btn btn-outline-primary w-100 py-3">
                                    <i class="fas fa-bookmark mb-2 d-block" style="font-size: 1.5rem;"></i>
                                    My Subscriptions
                                </a>
                            </div>
                            @if (User.IsInRole("Podcaster") || User.IsInRole("Admin"))
                            {
                                <div class="col-md-3">
                                    <a asp-controller="Podcast" asp-action="Index" class="btn btn-outline-primary w-100 py-3">
                                        <i class="fas fa-podcast mb-2 d-block" style="font-size: 1.5rem;"></i>
                                        My Podcasts
                                    </a>
                                </div>
                                <div class="col-md-3">
                                    <a asp-controller="Episode" asp-action="Index" class="btn btn-outline-primary w-100 py-3">
                                        <i class="fas fa-list mb-2 d-block" style="font-size: 1.5rem;"></i>
                                        My Episodes
                                    </a>
                                </div>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="col-md-3">
                                    <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-warning w-100 py-3">
                                        <i class="fas fa-users mb-2 d-block" style="font-size: 1.5rem;"></i>
                                        Manage Users
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Call to Action for Non-Authenticated Users -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-lg text-center">
                    <div class="card-body py-5">
                        <h3 class="mb-4">
                            <i class="fas fa-rocket me-2"></i>Ready to Start Your Podcast Journey?
                        </h3>
                        <p class="lead mb-4">Join thousands of creators and listeners in our growing community.</p>
                        <div class="d-flex justify-content-center gap-3 flex-wrap">
                            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Create Account
                            </a>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Sign In
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}